<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dip"
    android:minWidth="400dip"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filters"
            android:textColor="@color/colorAccent"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dip"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f1f1f1"
        android:minHeight="50dip"
        android:layout_marginTop="40dip"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sorted By"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_marginLeft="20dip"
            android:layout_alignParentLeft="true"
            android:textSize="24sp"/>
        <Spinner
            android:id="@+id/spinnerage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:entries="@array/age"
            ></Spinner>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="50dip"
        android:layout_marginTop="30dip"
        android:background="#f1f1f1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="24sp"
            android:layout_marginLeft="20dip"
            android:textColor="@android:color/black"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:textColor="@android:color/black"
            />
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:minHeight="50dip"
            android:paddingTop="10dip"
            android:background="#f1f1f1">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age from"
                android:textSize="24sp"
                android:layout_marginLeft="20dip"
            android:textColor="@android:color/black"/>
            <Spinner
                android:id="@+id/spinneragefrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_alignParentRight="true"
                android:entries="@array/age"
                ></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" To"
                android:textSize="24sp"
                android:layout_marginLeft="40dip"
                android:textColor="@android:color/black"/>
            <Spinner
                android:id="@+id/spinnerageto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_alignParentRight="true"
                android:entries="@array/age"
                ></Spinner>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#f1f1f1"
            android:paddingTop="10dip"
            android:minHeight="50dip"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Products"
                android:textColor="#000000"
                android:layout_marginLeft="20dip"
                android:layout_alignParentLeft="true"
                android:textSize="24sp"/>
            <Spinner
                android:id="@+id/spinnerproduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_alignParentRight="true"
                android:entries="@array/product"
                ></Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#f1f1f1"
            android:paddingTop="10dip"
            android:minHeight="50dip"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area Range"
                android:textColor="#000000"
                android:layout_marginLeft="20dip"
                android:layout_alignParentLeft="true"
                android:textSize="24sp"/>
            <Spinner
                android:id="@+id/spinnerrange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_alignParentRight="true"
                android:entries="@array/range"
                ></Spinner>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="10dip"
            android:layout_marginTop="30dip"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtApply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APPLY"
                android:textColor="@color/colorAccent"
                android:textSize="28sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txtClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLOSE"
                android:layout_marginLeft="40dip"
                android:textColor="@color/colorAccent"
                android:textSize="28sp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>