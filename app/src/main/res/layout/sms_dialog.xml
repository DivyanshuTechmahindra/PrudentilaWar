<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:padding="@dimen/margin_20"
        android:text="Send SMS"
        android:textColor="@color/black"
        android:textSize="@dimen/common_sign_in_up_text_size"
        android:textStyle="bold" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvTitle"
        android:layout_gravity="center"
        android:background="@color/color_hint" />

    <EditText
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/view"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_10"
        android:gravity="center_horizontal"
        android:hint="submitting Msg"
        android:textSize="@dimen/common_sign_in_up_text_size"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_marginTop="@dimen/margin_10"
        android:id="@+id/lin_custom_popup_conformation_mesg_btn_holder_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMessage"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="@dimen/common_sign_in_up_text_size"
            android:background="@drawable/button_rounded_green_shape"
            android:text="OK" />
    </LinearLayout>
</RelativeLayout>
