<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.prudential.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <ImageView
        android:id="@+id/floatingActionButtonPersonalInfo1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="10dp" android:layout_alignParentRight="true"

        android:src="@drawable/connect_but_ico"
         />

    <ImageView
        android:id="@+id/floatingActionButtonPersonalInfo2"
        android:layout_below="@+id/floatingActionButtonPersonalInfo1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="10dp" android:layout_alignParentRight="true"
        android:src="@drawable/connect_call_ico"
        />

    <ImageView
        android:id="@+id/floatingActionButtonPersonalInfo3"
        android:layout_below="@+id/floatingActionButtonPersonalInfo2"
        android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_gravity="bottom|end"
    android:layout_margin="10dp" android:layout_alignParentRight="true"

        android:src="@drawable/connect_email_ico"
        />

    <ImageView
        android:id="@+id/floatingActionButtonPersonalInfo4"
        android:layout_below="@+id/floatingActionButtonPersonalInfo3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="10dp" android:layout_alignParentRight="true"

        android:src="@drawable/connect_chat_ico"
        />3

</RelativeLayout>
